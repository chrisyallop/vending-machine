# Resolve the different destination folder prefixes so this script runs from the
# mac host and the ubuntu guest
ANSIBLE_PATH="`dirname \"$0\"`/.."
ANSIBLE_PATH="`( cd \"$ANSIBLE_PATH\" && pwd )`"  # absolutized and normalized
if [ -z "$ANSIBLE_PATH" ] ; then
    # error; for some reason, the path is not accessible
    # to the script (e.g. permissions re-evaled after suid)
    echo "Path $ANSIBLE_PATH not accessable"
    exit 500  # fail
fi

cd $ANSIBLE_PATH
